<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a1.wheather.MainActivity">

    <Button
        android:id="@+id/chen"
        android:layout_width="373dp"
        android:layout_height="230dp"
        android:text="here is going to be the tempratue"
        tools:layout_editor_absoluteX="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/tabhost"
        android:layout_marginBottom="289dp" />

    <TabHost xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tabhost"
        android:layout_width="381dp"
        android:layout_height="289dp"
        android:visibility="visible"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/thisDay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="thisDay" />

                <TextView
                    android:id="@+id/otherDays"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/tab_text_view"
                    android:visibility="visible" />
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</android.support.constraint.ConstraintLayout>
